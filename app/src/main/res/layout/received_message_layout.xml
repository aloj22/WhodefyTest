<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/message_padding"
    android:background="@drawable/received_message_background"
    android:layout_marginBottom="@dimen/message_padding">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:maxWidth="@dimen/message_text_max_width"
        tools:text="Message text"
        android:layout_marginRight="@dimen/message_padding"
        android:layout_marginEnd="@dimen/message_padding"/>

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/message_date_size"
        android:layout_gravity="bottom"
        tools:text="10:42"/>

</LinearLayout>
